<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/performers/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <p>Please first ensure that the Performer is not in the dropdown
    <select>
      <% performers.forEach(function(performer) { %>
        <option><%= performer.name %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-performer-form" action="/performers" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" id="name-input">
    <button type="submit">Add Performer</button>
  </form>
</main>

<%- include("../partials/footer") %>